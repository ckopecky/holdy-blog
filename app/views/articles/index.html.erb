<div class="container">
<h1>All blog posts</h1>

<p>
	<% if flash[:error].present? %>
  		<span class='flash-error'><%= flash[:error] %></span>
	<% end %>
	<% if flash[:notice].present? %>
  		<span class='flash-notice'><%= flash[:notice] %></span>
	<% end %>
	<% if flash[:success].present? %>
  		<span class='flash-success'><%= flash[:notice] %></span>
	<% end %>
</p>

<p>
	<%= link_to 'Add new post', new_article_path, :class => "btn btn-primary" %>
</p>

<table class="table" cellpadding="10" cellspacing="0" border="1">
	<thead>
		<th>Title</th>
		<th>Content</th>
		<th colspan="3"></th>
	</thead>
	<tbody>
		<% @articles.each do |article|%>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show post', article_path(article) %></td>
			<td><%= link_to 'Edit post', edit_article_path(article) %></td>
			<td><%= link_to 'Delete post', article_path(article),
					method: :delete,
					data: { confirm: 'Are you sure you want to delete this article?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>